{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "ui/*": [ "src/ui/*" ],
      "srv/*": [ "src/server/*" ],
      "shared/*": [ "src/shared/*" ]
    },
    "resolveJsonModule": true,
    "outDir": "./build",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "files": [],
  "references": [
    { "path": "src/server" },
    { "path": "src/ui" },
    { "path": "src/shared" },
  ]
}
